<table class='table table-condensed table-hover'>
  <caption>
    <h2>Lista artykułów</h2>
    <small><%= link_to 'Nowy artykuł', new_dashboard_article_path %></small>
  </caption>
  <thead>
    <tr>
      <th>Tytuł</th>
      <th colspan='3'>Treść</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= link_to raw('<span class="glyphicon glyphicon-eye-open"></span>'), dashboard_article_path(article) %></td>
      <td><%= link_to raw('<span class="glyphicon glyphicon-pencil"></span>'), edit_dashboard_article_path(article) %></td>
      <td><%= link_to raw('<span class="glyphicon glyphicon-trash"></span>'), dashboard_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
